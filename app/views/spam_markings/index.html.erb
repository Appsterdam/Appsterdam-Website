<table>
  <tr>
    <th>Name</th>
    <th>Weigth</th>
    <th>IPs</th>
    <th>Reporters</th>
    <th></th>
  </tr>
  <% @members.each do |member| %>
    <tr>
      <td><%= member.name %></td>
      <td><%= member.spam_markings.size %></td>
      <td><%= member.spam_markings.map(&:ip_address).to_sentence %></td>
      <td><%= member.spam_markings.map { |s| s.reporter.try(:name) }.compact.to_sentence %></td>
      <td><%= button_to "Remove membership listing", member_path(member), :method => :delete, :confirm => "Remove `#{member.name}' from the membership listing?" %>
    </tr>
  <% end %>
</table>
